# Flamy Dash iframe集成系统环境配置

# 服务器配置
PORT=3000
NODE_ENV=development

# 域名配置
PRIMARY_DOMAIN=flamydash.com
ALLOWED_ORIGINS=http://localhost:3000,https://flamydash.com,https://*.flamydash.com

# API配置
API_VERSION=1.0
MAX_REQUESTS_PER_WINDOW=100
RATE_LIMIT_WINDOW_MS=900000

# 游戏配置
DEFAULT_GAME_ID=flamy-dash
GAME_LOAD_TIMEOUT=30000

# 安全配置
CORS_ENABLED=true
HELMET_ENABLED=true
CSP_ENABLED=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600

# 分析配置
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-SE24TQQ4NY

# CDN配置 (可选)
CDN_URL=
STATIC_URL=

# 数据库配置 (未来扩展)
DATABASE_URL=
REDIS_URL=