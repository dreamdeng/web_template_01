<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

    <!-- Homepage -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>1.0</priority>
    </url>

    <!-- Game page (if separate) -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/play</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.9</priority>
    </url>

    <!-- About page (if exists) -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/about</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>

    <!-- FAQ page (if separate) -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/faq</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.6</priority>
    </url>

    <!-- Privacy Policy -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/privacy</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.3</priority>
    </url>

    <!-- Terms of Service -->
    <url>
        <loc>https://{{DOMAIN_NAME}}/terms</loc>
        <lastmod>{{LAST_MOD_DATE}}</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.3</priority>
    </url>

</urlset>